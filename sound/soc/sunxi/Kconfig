config SND_SUNXI_SOC_CODEC_CPU_DAI
    tristate "Asoc support for internal-codec cpudai"
    depends on ARCH_SUN50IW2 || ARCH_SUN50IW9 || ARCH_SUN8IW7 || ARCH_SUN8IW10 || ARCH_SUN8IW11 || ARCH_SUN8IW17

